<% if @user == current_user %>
  <%= simple_form_for @quote do |f| %>
    <%= f.input :content %>
    <%= f.button :submit %>
  <% end %>
<% end %>


 <p>Mes <%= @user.quotes.size if @user.quotes.size > 1 %> quotes sont </p>
 <% @quotes.each do |q| %>
