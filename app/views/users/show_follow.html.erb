<% provide(@title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.email %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Quotes:</b> <%= @user.quotes.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/follow_stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to user.email, user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <% @users.each do |u| %>
          <%= u.email %>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>